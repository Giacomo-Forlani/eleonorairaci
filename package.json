{
  "name": "portfolio-architettura",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.12.0",
  "engines": {
    "node": ">=18.17.0"
  },
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "pnpm -C apps/web dev",
    "build": "pnpm -C apps/web build",
    "start": "pnpm -C apps/web start",
    "studio:dev": "pnpm -C apps/studio dev",
    "studio:build": "pnpm -C apps/studio build",
    "lint": "pnpm -C apps/web lint && pnpm -C apps/studio lint",
    "typecheck": "pnpm -C apps/web typecheck && pnpm -C apps/studio typecheck",
    "format": "prettier -w ."
  },
  "devDependencies": {
    "prettier": "^3.2.5"
  }
}
